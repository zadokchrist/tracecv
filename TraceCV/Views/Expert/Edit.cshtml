                    }
                </select>
            </div>

            <div class="form-group">
                <label>Email:</label>
                <input asp-for="Email" class="form-control" />
            </div>

            <!-- Contacts -->
            <div class="form-group">
                <label>Phone Number(s):</label>
                <div id="contactsContainer">
