@model Expert
@{
    var countries = (IReadOnlyList<TraceCV.Services.CountryItem>)(ViewBag.Countries ?? Array.Empty<TraceCV.Services.CountryItem>());

    var africanIso = new HashSet<string>(StringComparer.OrdinalIgnoreCase)
    {
        "DZ","AO","BJ","BW","BF","BI","CM","CV","CF","TD","KM","CI","CD","DJ","EG","GQ","ER","SZ","ET","GA","GM",
        "GH","GN","GW","KE","LS","LR","LY","MG","MW","ML","MR","MU","MA","MZ","NA","NE","NG","RW","ST","SN","SC",
        "SL","SO","ZA","SS","SD","TZ","TG","TN","UG","ZM","ZW","EH"
    };
    var africanCountries = countries.Where(c => africanIso.Contains(c.Iso2)).OrderBy(c => c.Name).ToList();
}
<h2>Edit Expert</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<form asp-action="Edit" asp-route-id="@Model.Id" id="editExpertForm" method="post" enctype="multipart/form-data">
