                <td>@expert.WorkedWith2ML</td>
                <td>
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="actionsDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Actions
                        </button>
                        <div class="dropdown-menu" aria-labelledby="actionsDropdown">
                            <a class="dropdown-item" href="@Url.Action("Edit", new { id = expert.Id })">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a class="dropdown-item" href="@Url.Action("Delete", new { id = expert.Id })" onclick="return confirm('Are you sure you want to delete this expert?')">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                            <a class="dropdown-item" href="@Url.Content(expert.CvFilePath)" download>
