@model List<Expert>

<h2>Expert List</h2>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
<form asp-action="ListOfExperts" id="createExpertForm" method="get">
    <div class="row">
        <div class="col">
            <div class="form-group">
                <label for="Name">Name:</label>
                <input name="name" class="form-control" />
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label for="Name">Nationality:</label>
                <select name="nationality" class="form-control" id="nationalityDropdown">
                    <option value="" selected> Please Select Nationality</option>
                </select>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label for="Name">Key Sector:</label>
                <select name="keysector" class="form-control">
                    <option selected> Expert's Sector</option>
                    <option value="Water and Sanitation">Water and Sanitation</option>
                    <option value="Energy">Energy</option>
                    <option value="Enviroment">Enviroment</option>
                    <option value="Governance">Governance</option>
                </select>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label for="Name">Area of Speciality:</label>
                <select name="area_of_speciality" class="form-control">
                    <option selected> Expert's Speciality</option>
                    <option value="ICT">ICT</option>
                    <option value="Economist">Economist</option>
                    <option value="Engineering">Engineering</option>
                    <option value="Human Resource">Human Resource</option>
                    <option value="M&E">M&E</option>
                    <option value="Enviroment">Enviroment</option>
                    <option value="GIS">GIS</option>
                    <option value="Policy Regulation & legal">Policy Regulation & legal</option>
                    <option value="PPP (Public Private Partnership)">PPP (Public Private Partnership)</option>
                    <option value="Sociologist">Gender and Social Development</option>
                    <option value="Commercial">Commercial</option>
                    <option value="WASH/ Sanitation">WASH/ Sanitation</option>
                    <option value="Asset Management">Asset Management</option>
                    <option value="Financial Management">Financial Management</option>
                </select>
            </div>
        </div>
        
        <div class="col">
            <div class="form-group">
                <label for="Name">Education Level</label>
                <select name="levelofeducation" class="form-control">
                    <option selected>Level of Education</option>
                    <option value="Bachelors">Bachelors</option>
                    <option value="Masters">Masters</option>
                    <option value="MBA">MBA</option>
                    <option value="Ph.D">Ph.D</option>
                </select>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label for="Name">Gender</label>
                <select name="gender" class="form-control">
                    <option selected disabled>Select Gender</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label for="experience">Min Exp</label>
                <input name="experience" class="form-control" />
            </div>
        </div>
        <div class="col">
            <br />
            <button type="submit" class="btn btn-success">Search</button>
        </div>
    </div>
</form>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Gender</th>
            <th>Nationality</th>
            <th>Education Level</th>
            <th>Experience</th>
            <th>Worked with 2ml</th>
            <!-- Add other columns as needed -->
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null)
        {
            <tr>
                <td colspan="8">No experts found.</td>
            </tr>
        }else
        {
            if (Model.Count>0)
            {
                @foreach (var expert in Model)
                {
                    <tr>
                        <td>@expert.Name</td>
                        <td>@expert.Email</td>
                        <td>@expert.Gender</td>
                        <td>@expert.Nationality</td>
                        @if (expert.Educations != null && expert.Educations.Count > 0)
                        {
                            <td>@expert.Educations[0].Level</td>
                        }
                        else
                        {
                            <td> N/A</td>
                        }
                        
                        <td>@expert.experience</td>
                        <td>@expert.WorkedWith2ML</td>
                        <td>
                            <div class="dropdown">
                                <button class="btn btn-secondary dropdown-toggle" type="button" id="actionsDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Actions
                                </button>
                                <div class="dropdown-menu" aria-labelledby="actionsDropdown">
                                    <a class="dropdown-item" href="@Url.Action("Edit", new { id = expert.Id })">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <a class="dropdown-item" href="@Url.Action("Delete", new { id = expert.Id })" onclick="return confirm('Are you sure you want to delete this expert?')">
                                        <i class="fas fa-trash"></i> Delete
                                    </a>
                                    <a class="dropdown-item" href="@Url.Content(expert.CvFilePath)" download>
                                        <i class="fas fa-download"></i> Download CV
                                    </a>
                                </div>
                            </div>

                        </td>
                    </tr>
                }
            }else
            {
                <tr>
                    <td colspan="8">No experts found.</td>
                </tr>
            }
            
        }
        
    </tbody>
</table>
@section scripts {
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#nationalityDropdown").select2({
                placeholder: "Search for a country",
                allowClear: true,
                minimumInputLength: 0, // Set the minimum number of characters before showing results
                ajax: {
                    delay: 50,
                    url: 'https://restcountries.com/v2/all',
                    dataType: 'json',
                    processResults: function (data) {
                        return {
                            results: $.map(data, function (country) {
                                return {
                                    id: country.alpha3Code,
                                    text: country.name
                                };
                            })
                        };
                    }
                }
            });
        });
    </script>
}
