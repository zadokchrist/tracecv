@model List<Expert>

<h2>Expert List</h2>
<form asp-action="Index" id="createExpertForm" method="post" >
    <div class="row">
        <div class="col">
            <div class="form-group">
                <label for="Name">Name:</label>
                <input class="form-control" required />
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label for="Name">Nationality:</label>
                <select class="form-control" required id="nationalityDropdown">
                    <option value="" selected> Please Select Nationality</option>
                </select>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label for="Name">Key Sector:</label>
                <input class="form-control" required />
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label for="Name">Minimum Degree</label>
                <input class="form-control" required />
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label for="Name">Gender</label>
                <input class="form-control" required />
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label for="Name">Language</label>
                <input class="form-control" required />
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <br />
                <label for="Name"></label>
                <button type="button" id="addLanguage" class="btn btn-primary">Search</button>
            </div>
        </div>
    </div>
</form>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Gender</th>
            <th>Worked with 2ml</th>
            <!-- Add other columns as needed -->
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var expert in Model)
